<p id="notice"><%= notice %></p>

<h1>Releases</h1>

<table>
  <thead>
    <tr>
      <th>Switch</th>
      <th>Release type</th>
      <th>Release address ciphertext</th>
      <th>Release sent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= link_to release.switch.id, release.switch %></td>
        <td><%= release.release_type %></td>
        <td><%= release.release_address_ciphertext %></td>
        <td><%= release.release_sent %></td>
        <td><%= link_to 'Show', switch_release_path(switch_id: release.switch.id, id: release.id) %></td>
        <td><%= link_to 'Edit', edit_switch_release_path(switch_id: release.switch.id, id: release.id) %></td>
        <td><%= link_to 'Destroy', switch_release_path(switch_id: release.switch.id, id: release.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relase', new_switch_release_path(switch_id: @switch.id) %>
