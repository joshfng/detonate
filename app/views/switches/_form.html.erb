    <%= form.label :heartbeat_address %>
    <%= form.text_field :heartbeat_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :switch_address %>
    <%= form.text_field :switch_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

