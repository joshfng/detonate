<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"><%= notice %></p>

      <h1>Switches</h1>

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Content</th>
            <th scope="col">Heartbeat Interval</th>
            <th scope="col">Max Missed Heartbeats</th>
            <th scope="col" colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @current_user.switches.each do |switch| %>
            <tr>
              <th scope="row"><%= truncate(switch.name, length: 10) %></th>
              <td><%= truncate(switch.content_ciphertext, length: 10) %></td>
              <td><%= switch.heartbeat_interval %></td>
              <td><%= switch.max_missed_heartbeats %></td>
              <td><%= link_to 'Show', switch %></td>
              <td><%= link_to 'Edit', edit_switch_path(switch) %></td>
              <td><%= link_to 'Destroy', switch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Switch', new_switch_path, class: 'white btn btn-primary' %>
    </div>
  </div>
</div>
